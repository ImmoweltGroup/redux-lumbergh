{
  "name": "redux-lumbergh",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "Yeah, if you could go ahead and embrace best practices while working with redux, that would be great!",
  "main": "./dist/",
  "scripts": {
    "test": "yarn run lint && yarn run flow && yarn run jest:coverage",
    "lint": "eslint src",
    "prettier": "prettier --write src/**/*.js",
    "jest": "jest",
    "jest:watch": "yarn run jest -- --watch",
    "jest:coverage": "yarn run jest -- --coverage",
    "build:clean": "rimraf dist",
    "build:babel": "NODE_ENV=production babel src --out-dir dist --ignore spec.js",
    "build:flow": "flow-copy-source -v src dist --ignore='*.spec.js'",
    "prebuild": "yarn run build:clean",
    "build": "yarn run build:babel && yarn run build:flow",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "flow-typed-install": "flow-typed install --ignoreDeps=bundled peer --overwrite",
    "prepare": "yarn run flow-typed-install || true",
    "prepublishOnly": "yarn run build",
    "precommit": "lint-staged && npm test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "lint-staged": {
    "src/**/*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 5%",
    "last 2 versions",
    "Firefox ESR",
    "ie 11"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "keywords": [
    "redux",
    "util",
    "redux-saga",
    "actionType",
    "createActionType",
    "createReducer",
    "createRootSaga"
  ],
  "devDependencies": {
    "@immowelt/babel-preset-immowelt-react": "1.2.2",
    "@immowelt/eslint-config-immowelt-react": "2.0.4",
    "@immowelt/jest-preset-react": "1.1.1",
    "@immowelt/styleguide-javascript": "1.0.11",
    "@inkdpixels/commit-analyzer": "1.0.1",
    "@inkdpixels/release-notes-generator": "1.0.1",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "flow-bin": "0.75.0",
    "flow-copy-source": "1.3.0",
    "flow-typed": "2.4.0",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "6.1.1",
    "prettier": "1.13.6",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "redux": "3.7.2",
    "redux-saga": "0.16.0",
    "rimraf": "2.6.2",
    "semantic-release": "^8.2.0"
  },
  "peerDependencies": {
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0"
  },
  "jest": {
    "preset": "@immowelt/jest-preset-react"
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmoweltGroup/redux-lumbergh.git"
  }
}
